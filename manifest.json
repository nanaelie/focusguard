{
  "manifest_version": 3,
  "name": "FocusGuard",
  "version": "1.0",
  "description": "Masque les éléments distrayants sur les réseaux sociaux.",
  "permissions": ["scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

